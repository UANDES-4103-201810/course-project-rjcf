<h1>Use Roles</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @use_roles.each do |use_role| %>
      <tr>
        <td><%= use_role.type %></td>
        <td><%= use_role.user %></td>
        <td><%= link_to 'Show', use_role %></td>
        <td><%= link_to 'Edit', edit_use_role_path(use_role) %></td>
        <td><%= link_to 'Destroy', use_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

